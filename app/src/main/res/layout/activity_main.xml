<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A1A2E">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ® Blob Run Game"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:padding="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <EditText
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Enter name..."
            android:textColorHint="#888888"
            android:textColor="#FFFFFF"
            android:background="#333333"
            android:padding="12dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnDropBlob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DROP BLOB"
            android:backgroundTint="#4ECDC4"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <com.example.greets.BlobGameView
        android:id="@+id/blobGameView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#1A1A2E" />

    <Button
        android:id="@+id/btnClearBlobs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CLEAR ALL BLOBS"
        android:backgroundTint="#FF6B6B"
        android:textColor="#FFFFFF"
        android:layout_margin="16dp" />

</LinearLayout>